<UserControl x:Class="DevUtil.Plugins.CodeManager.CodeManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 상단 툴바 -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="새 코드 추가" Padding="10,5" Margin="0,0,10,0" 
                        Background="#007ACC" Foreground="White" BorderThickness="0"/>
                <Button Content="저장" Padding="10,5" Margin="0,0,10,0"
                        Background="#0E639C" Foreground="White" BorderThickness="0"/>
                <Button Content="새로고침" Padding="10,5"
                        Background="#0E639C" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>
        
        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 좌측 코드 목록 -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="코드 스니펫 목록" 
                               Foreground="White" FontWeight="Bold" 
                               Margin="10" FontSize="14"/>
                    
                    <ListBox Grid.Row="1" Background="Transparent" 
                             BorderThickness="0" Foreground="White" Margin="5">
                        <ListBoxItem Content="C# 클래스 템플릿"/>
                        <ListBoxItem Content="WPF 바인딩 예제"/>
                        <ListBoxItem Content="SQL 쿼리 샘플"/>
                        <ListBoxItem Content="정규식 패턴"/>
                        <ListBoxItem Content="REST API 호출"/>
                    </ListBox>
                </Grid>
            </Border>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#3F3F46"/>
            
            <!-- 우측 코드 상세 -->
            <Border Grid.Column="2" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="코드 상세 정보" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="제목:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Text="C# 클래스 템플릿" Background="#3F3F46" Foreground="White" 
                             BorderThickness="0" Padding="5" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="설명:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Text="기본 C# 클래스 구조 템플릿" Background="#3F3F46" Foreground="White" 
                             BorderThickness="0" Padding="5" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="코드:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox AcceptsReturn="True" Height="300" 
                             Background="#1E1E1E" Foreground="#D4D4D4" 
                             BorderThickness="1" BorderBrush="#3F3F46"
                             FontFamily="Consolas" Padding="5"
                             VerticalScrollBarVisibility="Auto"
                             Text="using System;&#x0a;&#x0a;namespace YourNamespace&#x0a;{&#x0a;    public class YourClass&#x0a;    {&#x0a;        public YourClass()&#x0a;        {&#x0a;        }&#x0a;    }&#x0a;}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>