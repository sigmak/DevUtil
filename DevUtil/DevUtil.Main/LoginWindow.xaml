<Window x:Class="DevUtil.Main.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevUtil - 로그인" Height="500" Width="400"
        WindowStyle="None" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">
    
    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox 스타일 -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox 스타일 -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#2D2D30" CornerRadius="10"
            BorderBrush="#3F3F46" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 타이틀바 -->
            <Border Grid.Row="0" Background="#1E1E1E"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="DevUtil - 로그인" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               FontSize="13"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Click="CloseButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 로그인 폼 -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center"
                        Margin="40,0">
                
                <!-- 로고 및 타이틀 -->
                <TextBlock Text="DevUtil" 
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#0078D4"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="개발 도구 통합 관리 시스템" 
                           FontSize="13"
                           Foreground="#B0B0B0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- 아이디 입력 -->
                <TextBlock Text="아이디" 
                           Foreground="#B0B0B0"
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource ModernTextBox}"
                         Height="40"
                         Margin="0,0,0,15"
                         IsEnabled="True"
                         IsTabStop="True"
                         TabIndex="0"/>

                <!-- 비밀번호 입력 -->
                <TextBlock Text="비밀번호" 
                           Foreground="#B0B0B0"
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}"
                             Height="40"
                             Margin="0,0,0,10"
                             IsEnabled="True"
                             IsTabStop="True"
                             TabIndex="1"/>

                <!-- 옵션 -->
                <Grid Margin="0,0,0,20">
                    <CheckBox Content="로그인 유지"
                              Foreground="#B0B0B0"
                              FontSize="12"
                              HorizontalAlignment="Left"
                              TabIndex="2"/>
                    <TextBlock Text="비밀번호 찾기"
                               Foreground="#0078D4"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Cursor="Hand"
                               MouseLeftButtonDown="ForgotPassword_Click"/>
                </Grid>

                <!-- 로그인 버튼 -->
                <Button Content="로그인"
                        Style="{StaticResource ModernButton}"
                        Height="45"
                        FontSize="15"
                        Click="LoginButton_Click"
                        Margin="0,0,0,15"
                        TabIndex="3"/>

                <!-- 회원가입 링크 -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="계정이 없으신가요? "
                               Foreground="#B0B0B0"
                               FontSize="12"/>
                    <TextBlock Text="회원가입"
                               Foreground="#0078D4"
                               FontSize="12"
                               Cursor="Hand"
                               MouseLeftButtonDown="SignUp_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>