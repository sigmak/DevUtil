<Window x:Class="DevUtil.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevUtil - 개발 도구 모음" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Expander 스타일 -->
        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- TreeViewItem 스타일 -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5,3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 메인 컨텐츠 영역 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 좌측 메뉴 영역 -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Expander Header="메뉴" IsExpanded="True" Background="#2D2D30" Foreground="White">
                            <TreeView x:Name="MenuTreeView" Background="Transparent" BorderThickness="0"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- 구분선 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#3F3F46"/>
            
            <!-- 우측 탭 컨트롤 영역 -->
            <TabControl Name="MainTabControl" Grid.Column="2" Background="#1E1E1E" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="#2D2D30" 
                                            BorderBrush="#3F3F46" 
                                            BorderThickness="1,1,1,0" 
                                            Margin="0,0,2,0"
                                            CornerRadius="3,3,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="10,5">
                                            <TextBlock Text="{TemplateBinding Header}" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center"/>
                                            <Button Content="✕" 
                                                    Margin="10,0,0,0" 
                                                    Background="Transparent" 
                                                    Foreground="White" 
                                                    BorderThickness="0"
                                                    Padding="5,0"
                                                    Click="CloseTab_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=TabItem}}"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#3E3E42"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                
                <!-- 시작 페이지 -->
                <TabItem Header="시작 페이지" Name="StartPageTab">
                    <Grid Background="#1E1E1E">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="DevUtil" FontSize="36" FontWeight="Bold" 
                                       Foreground="#007ACC" HorizontalAlignment="Center"/>
                            <TextBlock Text="개발 도구 통합 관리 시스템" FontSize="18" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,10"/>
                            <TextBlock Text="좌측 메뉴에서 원하는 기능을 선택하세요." 
                                       Foreground="Gray" HorizontalAlignment="Center" Margin="0,20"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- StatusBar 추가 -->
        <StatusBar Grid.Row="1" Background="#007ACC" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" 
                           Text="준비" 
                           Foreground="White"
                           Padding="5,0"
                           FontSize="12"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>