<Window x:Class="DevUtil.Main.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevUtil - 회원가입" Height="650" Width="450"
        WindowStyle="None" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">
    
    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C4C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox 스타일 -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox 스타일 -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#2D2D30" CornerRadius="10"
            BorderBrush="#3F3F46" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 타이틀바 -->
            <Border Grid.Row="0" Background="#1E1E1E"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="DevUtil - 회원가입" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               FontSize="13"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Click="CloseButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 회원가입 폼 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center"
                            Margin="40,20">
                    
                    <!-- 로고 및 타이틀 -->
                    <TextBlock Text="DevUtil" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#0078D4"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="새 계정 만들기" 
                               FontSize="13"
                               Foreground="#B0B0B0"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- 아이디 입력 -->
                    <TextBlock Text="아이디" 
                               Foreground="#B0B0B0"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,15"/>

                    <!-- 이메일 입력 -->
                    <TextBlock Text="이메일" 
                               Foreground="#B0B0B0"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,15"/>

                    <!-- 비밀번호 입력 -->
                    <TextBlock Text="비밀번호" 
                               Foreground="#B0B0B0"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Height="40"
                                 Margin="0,0,0,15"/>

                    <!-- 비밀번호 확인 -->
                    <TextBlock Text="비밀번호 확인" 
                               Foreground="#B0B0B0"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Height="40"
                                 Margin="0,0,0,15"/>

                    <!-- 이름 입력 -->
                    <TextBlock Text="이름" 
                               Foreground="#B0B0B0"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,20"/>

                    <!-- 약관 동의 -->
                    <CheckBox x:Name="TermsCheckBox"
                              Foreground="#B0B0B0"
                              FontSize="12"
                              Margin="0,0,0,5">
                        <TextBlock>
                            <Run Text="[필수] "/>
                            <Run Text="이용약관" Foreground="#0078D4" Cursor="Hand"
                                 MouseLeftButtonDown="Terms_Click"/>
                            <Run Text=" 및 "/>
                            <Run Text="개인정보처리방침" Foreground="#0078D4" Cursor="Hand"
                                 MouseLeftButtonDown="Privacy_Click"/>
                            <Run Text="에 동의합니다."/>
                        </TextBlock>
                    </CheckBox>

                    <CheckBox x:Name="MarketingCheckBox"
                              Content="[선택] 마케팅 정보 수신에 동의합니다."
                              Foreground="#B0B0B0"
                              FontSize="12"
                              Margin="0,0,0,25"/>

                    <!-- 버튼 영역 -->
                    <Button Content="회원가입"
                            Style="{StaticResource ModernButton}"
                            Height="45"
                            FontSize="15"
                            Click="SignUpButton_Click"
                            Margin="0,0,0,10"/>

                    <Button Content="취소"
                            Style="{StaticResource SecondaryButton}"
                            Height="45"
                            FontSize="15"
                            Click="CancelButton_Click"
                            Margin="0,0,0,15"/>

                    <!-- 로그인 링크 -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="이미 계정이 있으신가요? "
                                   Foreground="#B0B0B0"
                                   FontSize="12"/>
                        <TextBlock Text="로그인"
                                   Foreground="#0078D4"
                                   FontSize="12"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="Login_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>